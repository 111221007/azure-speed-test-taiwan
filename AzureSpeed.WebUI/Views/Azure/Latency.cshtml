@{
    ViewBag.Title = "Azure Storage Latency Test";
}

@Scripts.Render("~/bundles/flot")
<script type="text/javascript" src="~/Scripts/azurespeed/latency.js">
</script>
<style>
    .chart-container {
        box-sizing: border-box;
        height: 350px;
        padding: 20px 15px 15px 15px;
        border: 1px solid #ddd;
        background: #fff;
        background: linear-gradient(#f6f6f6 0, #fff 50px);
        background: -o-linear-gradient(#f6f6f6 0, #fff 50px);
        background: -ms-linear-gradient(#f6f6f6 0, #fff 50px);
        background: -moz-linear-gradient(#f6f6f6 0, #fff 50px);
        background: -webkit-linear-gradient(#f6f6f6 0, #fff 50px);
        -o-box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        -ms-box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        -moz-box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        -webkit-box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

    .chart-placeholder {
        width: 100%;
        height: 100%;
        font-size: 14px;
        line-height: 1.2em;
    }
</style>

<div class="container-fluid">
    <h3 class="page-header">Azure Storage Latency Test</h3>
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                Test network latency to Azure Storage in worldwide data centers, determine the best region for your application and users. A closer data center will provide less latency and fast throughput.
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <i class="fa fa-th-list"></i>
                    Closest Data Centers
                </div>
                <table class="table table-bordered table-striped" id="closest-table"></table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <i class="fa fa-area-chart"></i>
                    Azure Storage Latency
                </div>
                <div class="chart-container">
                    <div id="loading">
                        <img src="~/Content/images/loading.gif" />
                    </div>
                    <div class="chart-placeholder" id="placeholder"> </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <i class="fa fa-th-list"></i>
                    Latency Test
                </div>
                <table class="table table-bordered table-striped" id="latency-table">
                    <thead>
                        <tr>
                            <th>GEO Zone</th>
                            <th>Region</th>
                            <th>Location</th>
                            <th>Average Latency (ms)</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
