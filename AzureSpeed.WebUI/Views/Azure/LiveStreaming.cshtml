@{
    ViewBag.Title = "Azure Media Service Live Streaming Latency Test";
}

<script type="text/javascript" src="~/Scripts/azurespeed/download.js"></script>
<script type="">
    $(function () {
        var ls = {
            updateClock: function () {
                var now = new Date(),
                time = now.getHours() + ':' + now.getMinutes() + ':' + now.getSeconds();
                $('#time').text(time);
                setTimeout(ls.updateClock, 1000);
            }
        };
        ls.updateClock();
    });
</script>

<style>
    .live-wrapper {
        width: 600px;
        height: 400px;
    }

    .time span {
        font-size: 30px;
        font-weight: bolder;
    }
</style>

<div class="container-fluid">
    <h3 class="page-header">Azure Media Service Live Streaming Latency Test</h3>
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                Test latency from remote Azure Media Service Live Streaming. The live channel is hosted at Azure China East datacenter, remote server time zone is UTC + 8
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <i class="fa fa-th-list"></i>
                    Media Service Live Streaming latency
                </div>
                <div class="panel panel-body">
                    <div class="row">
                        <div class="col-md-6 live-wrapper">
                            <object type="application/x-shockwave-flash" data="/content/player/StrobeMediaPlayback.2.0.swf" width="100%" height="100%" id="flashPlayer" style="visibility: visible;">
                                <param name="allowfullscreen" value="true">
                                <param name="wmode" value="direct">
                                <param name="flashvars" value="src=@System.Configuration.ConfigurationManager.AppSettings["LiveStreamingUrl"]&amp;autoPlay=true&amp;plugin_AdaptiveStreamingPlugin=/content/player/MSAdaptiveStreamingPlugin-v1.0.10-osmf2.0.swf&amp;AdaptiveStreamingPlugin_retryLive=true&amp;AdaptiveStreamingPlugin_retryInterval=10">
                            </object>
                        </div>
                        <div class="col-md-6 time">
                            <span>Current Local time is </span><span id="time"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>