@{
    ViewBag.Title = "Azure Storage Upload Speed Test";
}

@Scripts.Render("~/bundles/jazure")
<script type="text/javascript" src="~/Scripts/azurespeed/upload.js"></script>

<div class="container-fluid">
    <h3 class="page-header">Azure Storage Blob Upload Speed Test</h3>
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-warning alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                Test upload speed to Azure Blob Storage in worldwide data centers
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div id="geozone-group">
                <label>Please check regions you want to test: </label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div>
                <button class="btn btn-success" data-action="upload">Start Upload Speed Test >></button>
            </div>
        </div>
    </div>
    <div class="row row-margin-top">
        <div class="col-md-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <i class="fa fa-th-list"></i>
                    Upload Speed Result
                </div>
                <table class="table table-bordered table-striped" id="upload-table">
                    <thead>
                        <tr>
                            <th>GEO Zone</th>
                            <th>Region</th>
                            <th>Location</th>
                            <th>Upload Progress</th>
                            <th>Upload Speed</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

